# This file allows users to call find_package(Polly) and pick up our targets.

find_package(LLVM REQUIRED CONFIG
             HINTS "@POLLY_CONFIG_LLVM_CMAKE_DIR@")


set(POLLY_CMAKE_DIR "@POLLY_CONFIG_CMAKE_DIR@")
set(POLLY_DEFINITIONS ${LLVM_DEFINITIONS})
set(POLLY_INCLUDE_DIRS "@POLLY_CONFIG_INCLUDE_DIRS@" ${LLVM_INCLUDE_DIRS})
set(POLLY_LIBRARY_DIRS ${LLVM_LIBRARY_DIRS})
set(POLLY_LIBRARIES ${LLVM_LIBRARIES} PollyISL PollyPPCG Polly)

set(POLLY_EXPORTED_TARGETS PollyISL PollyPPCG Polly LLVMPolly)

add_library(PollyISL IMPORTED)

add_library(PollyPPCG IMPORTED)
target_link_libraries(PollyPPCG INTERFACE PollyISL)

add_library(Polly IMPORTED)
target_link_libraries(Polly INTERFACE PollyISL PollyPPCG)

add_library(LLVMPolly IMPORTED)
target_link_libraries(LLVMPolly INTERFACE Polly)
